<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66BB6A"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/idBtnPickDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="#CBEC407A"
        android:text="@string/pick_date"
        android:textAllCaps="false"
        android:textColorHighlight="@android:color/holo_blue_dark"
        android:textColorLink="#90CAF9"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextID"
        app:layout_constraintVertical_bias="0.163" />

    <Button
        android:id="@+id/idBtnPickTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"
        android:backgroundTint="#EC407A"
        android:text="@string/pick_time"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnPickDate"
        app:layout_constraintVertical_bias="0.072"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/textViewTop"
        android:layout_width="383dp"
        android:layout_height="348dp"
        android:layout_marginStart="8dp"
        android:text="@string/text_view_top"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <EditText
        android:id="@+id/editTextID"
        android:layout_width="289dp"
        android:layout_height="59dp"
        android:layout_marginBottom="420dp"
        android:contentDescription="@string/insert_id"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="Accessibility" />


    <TextView
        android:id="@+id/textViewID"
        android:layout_width="201dp"
        android:layout_height="24dp"
        android:text="@string/insert_id"
        app:layout_constraintBottom_toTopOf="@+id/editTextID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTop"
        app:layout_constraintVertical_bias="0.823" />

    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="263dp"
        android:layout_height="92dp"
        android:layout_marginTop="64dp"
        android:backgroundTint="#EC407A"
        android:text="@string/submit"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idBtnPickTime"
        app:layout_constraintVertical_bias="0.078" />

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</androidx.constraintlayout.widget.ConstraintLayout>