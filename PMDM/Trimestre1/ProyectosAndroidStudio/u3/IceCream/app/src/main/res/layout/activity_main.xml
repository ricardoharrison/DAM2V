<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF59D"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewContainer"
        android:layout_width="137dp"
        android:layout_height="20dp"
        android:layout_marginBottom="76dp"
        android:text="@string/container_selection"
        android:textAlignment="textStart"
        android:textColor="#F48FB1"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/buttonOrder"
        app:layout_constraintEnd_toStartOf="@+id/spinnerContainer"
        app:layout_constraintHorizontal_bias="0.716"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextChocolate"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginBottom="156dp"
        android:backgroundTint="#B39DDB"
        android:ems="10"
        android:inputType="number"
        android:shadowColor="#9FA8DA"
        android:textColor="#9FA8DA"
        app:layout_constraintBottom_toTopOf="@+id/buttonOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.323"
        app:layout_constraintStart_toEndOf="@+id/textViewChocolate" />

    <EditText
        android:id="@+id/editTextStrawberry"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#9FA8DA"
        android:ems="10"
        android:inputType="number"
        android:shadowColor="#9FA8DA"
        android:textColor="#9FA8DA"
        app:layout_constraintBottom_toTopOf="@+id/editTextChocolate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toEndOf="@+id/textViewStrawberry" />

    <Button
        android:id="@+id/buttonOrder"
        android:layout_width="280dp"
        android:layout_height="104dp"
        android:backgroundTint="#9FA8DA"
        android:text="@string/order"
        android:textColor="#FFF59D"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.88" />

    <TextView
        android:id="@+id/textViewChocolate"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_marginBottom="72dp"
        android:text="@string/chocolate"
        android:textColor="#9FA8DA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/spinnerContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.235"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewVanilla"
        android:layout_width="179dp"
        android:layout_height="46dp"
        android:text="@string/vanilla"
        android:textColor="#9FA8DA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewStrawberry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.228"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.66" />

    <TextView
        android:id="@+id/textViewStrawberry"
        android:layout_width="178dp"
        android:layout_height="47dp"
        android:layout_marginBottom="68dp"
        android:text="@string/strawberry"
        android:textColor="#9FA8DA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/textViewChocolate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.234"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:id="@+id/spinnerContainer"
        android:layout_width="156dp"
        android:layout_height="45dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/buttonOrder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.827"
        app:layout_constraintStart_toStartOf="parent"
        android:spinnerMode="dialog"
        />

    <EditText
        android:id="@+id/editTextVanilla"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:backgroundTint="#9FA8DA"
        android:ems="10"
        android:inputType="number"
        android:shadowColor="#9FA8DA"
        android:textColor="#9FA8DA"
        app:layout_constraintBottom_toTopOf="@+id/editTextStrawberry"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.376"
        app:layout_constraintStart_toEndOf="@+id/textViewVanilla"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.756" />
</androidx.constraintlayout.widget.ConstraintLayout>