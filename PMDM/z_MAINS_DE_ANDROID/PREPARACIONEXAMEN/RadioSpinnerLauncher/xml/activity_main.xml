<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#373333"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textViewFinalSelection"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="#4DB6AC"
        android:gravity="center"
        android:text="@string/final_selection"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/buttonContinue"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/textViewDisplay"
        android:layout_width="0dp"
        android:layout_height="153dp"
        android:background="#4DB6AC"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewFinalSelection"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/textViewSecondaryType"
        android:layout_width="411dp"
        android:layout_height="54dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="@string/secondary_type"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMainType">

        <RadioButton
            android:id="@+id/radioButtonGrass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#DCE775"
            android:backgroundTint="#AED581"
            android:text="@string/radio_grass" />

        <RadioButton
            android:id="@+id/radioButtonFire"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FF8A65"
            android:text="@string/radio_fire" />

        <RadioButton
            android:id="@+id/radioButtonWater"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#4FC3F7"
            android:text="@string/radio_water" />

    </RadioGroup>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:background="#FFD54F"
        android:gravity="center"
        android:text="@string/title"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewMainType"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="@string/main_type"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <Spinner
        android:id="@+id/spinnerSecTypes"
        android:layout_width="0dp"
        android:layout_height="73dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSecondaryType" />

    <Button
        android:id="@+id/buttonContinue"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:backgroundTint="#2B2626"
        android:text="@string/Continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinnerSecTypes" />
</androidx.constraintlayout.widget.ConstraintLayout>