#include <stdio.h>
#include <unistd.h>
#include <sys/types.h>
#include <stdlib.h>
#include <string.h>
#include <fcntl.h>
#include <openssl/evp.h>
#include <time.h>
#include <sys/wait.h>
#include <stdbool.h>
#include <ctype.h>
#include <signal.h>
#include <math.h>

#define BUFFER_SIZE 1024

int main(int argc, char const *argv[]) {
    char lectura[BUFFER_SIZE];

    //leer
    FILE* file = fopen("test.txt", "r");

    if (file == NULL) {
        perror("No se pudo abrir el archivo");
        return 1;
    }

    printf("Leyendo el archivo de texto:\n");
    char linea[BUFFER_SIZE];
    while (fgets(linea, sizeof(linea), file) != NULL) {
        printf("%s", linea);
    }

    fclose(file);

    //escribir
    file = fopen("test.txt", "a"); //'a' = append || 'w' = overwrite
    fprintf(file, "Insertando una nueva l√≠nea desde VS Code\n");
    fclose(file);

    return 0;
}